#!/bin/sh
# prerm script for bash-shellshock
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <prerm> `remove'
#        * <old-prerm> `upgrade' <new-version>
#        * <new-prerm> `failed-upgrade' <old-version>
#        * <conflictor's-prerm> `remove' `in-favour' <package> <new-version>
#        * <deconfigured's-prerm> `deconfigure' `in-favour'
#          <package-being-installed> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    remove|deconfigure)
        # Already diverted?
        if [ "$(dpkg-divert --truename /bin/bash)" != "/bin/bash" ]; then
            diverted=1
        else
            diverted=
        fi

        # Remove the diversion, but again don't update the filesystem.
        dpkg-divert --package bash-shellshock --remove \
            --divert /bin/bash.real /bin/bash
        if [ -n "$diverted" ]; then
            if [ -e /bin/bash.real ]; then
                mv -vf /bin/bash.real /bin/bash
            elif [ -h /bin/bash ] ; then
                # bash not installed; just remove the symlink
                rm -f /bin/bash
            fi
        fi
    ;;

    upgrade|failed-upgrade)
    ;;

    *)
        echo "prerm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
